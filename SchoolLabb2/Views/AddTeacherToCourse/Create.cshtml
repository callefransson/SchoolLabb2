 @model SchoolLabb2.Models.Course
@{
    ViewData["Title"] = "Create";
}
<h1 class="display-4">Add teacher to courses</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Choose Teacher</label>
                <select name="teacherId" class="form-control" asp-items="ViewBag.FkTeacherId">
                </select>
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label class="control-label">Choose courses</label>
                @foreach (var course in ViewBag.FkCourseId)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="courseId" value="@course.Value" id="@("course" + course.Value)" />
                        <label class="form-check-label" for="@("course" + course.Value)">
                            @course.Text
                        </label>
                    </div>
                }
                <span asp-validation-for="TeacherCourses" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-controller="TeacherInfo" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

